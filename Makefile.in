ocp: boot/kickload.o
	$(CC) $(LDFLAGS) -o $@ $^ @DL_LIBS@ @EFENCE_LIBS@ @DUMA_LIBS@
ifeq ($(HAIKU),1)
	rc -o ocp.rsrc ocp.rdef
	xres -o $@ ocp.rsrc
	mimeset $@
endif

